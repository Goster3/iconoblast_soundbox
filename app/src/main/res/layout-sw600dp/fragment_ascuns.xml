<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollASC"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ascuns">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/ascunsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottomDefault"
            android:text="@string/salut"
            android:textColor="@color/Black"
            android:textSize="@dimen/buttonDefault"
            app:backgroundTint="@color/Green2" />

    </TableLayout>

</ScrollView>