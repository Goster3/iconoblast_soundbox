<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollDEL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deltarune">

  <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

    <Button
        android:id="@+id/guerriersb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guerrierdelta"
        android:textColor="@color/Black"
        android:textSize="@dimen/buttonDefault"
        app:backgroundTint="@color/blue3" />

    <Button
        android:id="@+id/krisb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kris"
        android:textColor="@color/Black"
        android:textSize="@dimen/buttonDefault"
        app:backgroundTint="@color/blue4"/>

  </TableLayout>

</ScrollView>