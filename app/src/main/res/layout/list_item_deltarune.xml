<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/deltaruneCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/blue4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        app:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deltaruneImageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/guerriers_delta"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/guerrierdelta"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/deltaruneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text"
            android:textColor="@android:color/black"
            android:text="@string/guerrierdelta"
            android:gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>